<% if flash.has?(:message) %>
<%= flash[:message] %>
<% end %>

<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Show me the Songs!</title>
  </head>
  <body>
    <h1>Song: <%=@song.name %> </p><br>
    <p>Artist:<a href="/artists/<%=@song.artist.slug%>"><%=@song.artist.name %></a></p><br>
    <p>Genres:</p>
    <ul>
      <% @song.genres.each do |genre| %>
      <li>
        <a href="/genres/<%= genre.slug %>"><%= genre.name %></a>
      </li>
      <% end %>
    </ul>
  </body>
</html>
